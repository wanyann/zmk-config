#include <dt-bindings/zmk/matrix_transform.h>
#include "op36_layout.dtsi"

/ {
    chosen {
      zmk,kscan = &kscan0;
      zmk,physical-layout = &physical_layout;
      zmk,battery = &vbatt;
    };

    default_transform: keymap_transform_0 {
      compatible = "zmk,matrix-transform";
      rows = <12>;
      columns = <3>;
	    map = <
RC(4, 0) RC(3, 0) RC(2, 0) RC(1, 0) RC(0, 0)    RC(6, 0) RC(7, 0) RC(8, 0) RC(9, 0) RC(0, 0)
RC(4, 1) RC(3, 1) RC(2, 1) RC(1, 1) RC(0, 1)    RC(6, 1) RC(7, 1) RC(8, 1) RC(9, 1) RC(0, 1)
RC(4, 2) RC(3, 2) RC(2, 2) RC(1, 2) RC(0, 2)    RC(6, 2) RC(7, 2) RC(8, 2) RC(9, 2) RC(0, 2)
                  RC(5, 0) RC(5, 1) RC(5, 2)    RC(1, 2) RC(1, 1) RC(1, 0)
      >;
    };

    kscan0: kscan {
      compatible = "zmk,kscan-gpio-matrix";
      diode-direction = "row2col";
      wakeup-source;
    };

    vbatt: vbatt {
        status = "okay";
        compatible = "zmk,battery-voltage-divider";
        io-channels = <&adc 7>;
        output-ohms = <1564000>;
        full-ohms = <(806000 + 1564000)>;
    };
};
